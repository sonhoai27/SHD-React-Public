
{
    "enable": true,
    "extends": [
      "tslint-config-airbnb"
    ],
    "linterOptions": {
      "exclude": [
        "node_modules",
        "**/*.js"
      ]
    },
    "rules": {
      "import-name": false,
      "no-submodule-imports": false,
      "interface-over-type-literal": false,
      "variable-name": [true, "allow-pascal-case"]
    }
  }